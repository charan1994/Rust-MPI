%post
    #!/bin/bash
    bash
    MPI_ROOT=/opt/intel/oneapi/mpi/2021.1.1

    # package IB, RDMA and SHMEM components
    PACKAGES="g++ librdmacm1 curl ca-certificates autoconf automake libtool libltdl-dev libfabric-dev wget lsb-release software-properties-common gnupg apt-transport-https texinfo"
    apt-get update -y
    apt-get install -y --no-install-recommends $PACKAGES

    wget https://apt.llvm.org/llvm.sh
    chmod +x llvm.sh
    ./llvm.sh

    curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y

    # cmake or any other build system goes here
    cd /opt/allToAll
    bash -c "export LIBCLANG_PATH=/usr/lib/x86_64-linux-gnu && source $HOME/.cargo/env && source $MPI_ROOT/env/vars.sh && cargo build --release"

    # clean unwanted content (including MPI)
    apt clean

    rm -rf /var/lib/apt/lists/*
    rm -rf /var/tmp/*

    rm -rf $MPI_ROOT

%runscript
    # bash -c "source $HOME/.cargo/env && cd /opt/allToAll/target/release && ./allToAll" for my machine 
    # run command would be singularity run --bind /opt/intel/oneapi/mpi/2021.1.1:/opt/intel/oneapi/mpi/2021.1.1 run-test.simg
    ./allToAll $@

